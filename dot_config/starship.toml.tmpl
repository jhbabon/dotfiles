# ---------------------------------------------------------------------
# Starship configuration
# ---------------------------------------------------------------------
add_newline = true
scan_timeout = 10

format = """
$username\
$hostname\
$directory\
$git_branch\
{{ if (not .starship_simple) -}}
$git_state\
$git_status\
{{- end }}
$cmd_duration\
{{ if (not .starship_simple) -}}
$fill\
$golang\
$nodejs\
$ruby\
$rust\
{{- end }}
$line_break\
$jobs\
$character"""

[directory]
style = "blue"

[fill]
symbol = " "

[character]
success_symbol = "[❯](purple)"
error_symbol = "[❯](red)"
vimcmd_symbol = "[❮](green)"

[git_branch]
{{ if (not .starship_simple) -}}
format = "[$branch]($style)"
{{- else -}}
format = "[$branch]($style) "
{{- end }}
style = "bright-black"

[git_status]
format = "[[(*$conflicted$untracked$modified$staged$renamed$deleted)](218) ($ahead_behind$stashed)]($style)"
style = "cyan"
# replace all instances of zero-width characters, "​", with space + backspace character
# see: https://github.com/starship/starship/issues/4927
conflicted = " \b" # "​"
untracked = " \b" # "​"
modified = " \b" # "​"
staged = " \b" # "​"
renamed = " \b" # "​"
deleted = " \b" # "​"
stashed = "≡"

[git_state]
format = '\([$state( $progress_current/$progress_total)]($style)\) '
style = "bright-black"

[cmd_duration]
format = "[$duration]($style) "
style = "yellow"

[jobs]
style = "bright-black"
