[user]
  name       = Juan Hernández Babón
  email      = juan.hernandez.babon@gmail.com
  editor     = vim

[apply]
  whitespace = strip

[diff]
  color      = auto

[color]
  ui         = auto

[alias]
  st         = status
  std        = diff --cached
  br         = branch
  brd        = branch -d
  brD        = branch -D
  c          = commit
  cm         = commit -m
  ca         = commit --amend
  a          = add
  aa         = !git add -u && git add . && git status
  co         = checkout
  cob        = checkout -b
  rb         = rebase
  rbc        = rebase --continue
  rbs        = rebase --skip
  rt         = remote
  sm         = submodule
  who        = shortlog -n -s --no-merges
  lg         = log --graph --pretty=format:'%Cred%h%Creset | %Cgreen%an%Creset | %s | %Cblue%cr%Creset'
  up         = !git fetch origin && git rebase origin/master
  ir         = !git rebase -i origin/master
  done       = !git fetch && git rebase origin/master && git checkout master && git merge @{-1}
  deal       = rake && git push origin master
