[init]
  templatedir = /Users/jhbabon/src/git-template

[user]
  name   = Juan HernÃ¡ndez
  email  = juan.hernandez.babon@gmail.com
  editor = vim

[apply]
  whitespace = strip

[diff]
  color = auto

[color]
  ui = auto

[alias]
  s   = status --short --branch
  d   = diff
  dc  = diff --cached
  br  = branch
  brd = branch -d
  brD = branch -D
  c   = commit
  cm  = commit -m
  ca  = commit --amend
  a   = add
  aa  = !git add --all && git status -s --branch
  ai  = add --all --intent-to-add
  ap  = add --patch
  co  = checkout
  cob = checkout -b
  rb  = rebase
  rbc = rebase --continue
  rbs = rebase --skip
  ri  = rebase -i
  sm  = submodule
  who = shortlog -n -s --no-merges
  up  = pull --rebase
  l   = log --graph --pretty=format:'%C(auto)%h%d%Creset | %Cgreen%an%Creset | %s | %Cblue%cr%Creset'
  bn  = rev-parse --abbrev-ref HEAD # branch name

  publish = !git push -u origin $(git bn)

  # exclude: http://coderwall.com/p/n1d-na
  exclude = !sh -c 'mkdir -p .git/info && echo "$1" >> .git/info/exclude' -
  ex      = !git exclude

  # select a branch from a menu thanks to selecta script.
  sl = !git branch | cut -c 3- | fzf | xargs git checkout
  # and delete a branch from.
  sd = !git branch | cut -c 3- | fzf | xargs git branch -d

[core]
  quotepath = false

[merge]
  tool = vimdiff

; only for git ~> 1.8
[push]
  default = simple
